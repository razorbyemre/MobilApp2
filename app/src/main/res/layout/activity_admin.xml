<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back"
    tools:context=".AdminActivity">


    <Button
        android:id="@+id/btnSettingsSchedule"
        android:layout_width="327dp"
        android:layout_height="53dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="31dp"
        android:text="Schedule Settings"
        app:layout_constraintBottom_toTopOf="@+id/btnSettingsGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSettingsGroup"
        android:layout_width="327dp"
        android:layout_height="53dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="160dp"
        android:text="Group Settings"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingsSchedule" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="39dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingsGroup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="44dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="215dp"
        android:text="Admin"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSettingsSchedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>